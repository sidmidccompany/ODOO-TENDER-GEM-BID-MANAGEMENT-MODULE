    <record id="tender_bid_action" model="ir.actions.act_window">
        <field name="name">Bids</field>
        <field name="res_model">tender.bid</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_tender': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first bid
            </p>
            <p>
                Prepare and track bids for tenders.
            </p>
        </field>
    </record>
    
    <!-- GeM Portal Views -->
    <record id="gem_portal_view_form" model="ir.ui.view">
        <field name="name">gem.portal.form</field>
        <field name="model">gem.portal</field>
        <field name="arch" type="xml">
            <form string="GeM Portal">
                <header>
                    <button name="action_test_connection" string="Test Connection" type="object" class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_tenders" icon="fa-file-text-o">
                            <field string="Tenders" name="tender_count" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_bids" icon="fa-gavel">
                            <field string="Bids" name="bid_count" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Portal Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="api_endpoint"/>
                            <field name="api_key"/>
                            <field name="api_secret" password="True"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="connection_status"/>
                            <field name="last_connection"/>
                            <field name="token" invisible="1"/>
                            <field name="token_expiry" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="gem_portal_view_tree" model="ir.ui.view">
        <field name="name">gem.portal.tree</field>
        <field name="model">gem.portal</field>
        <field name="arch" type="xml">
            <tree string="GeM Portals" decoration-success="connection_status=='connected'" 
                  decoration-danger="connection_status=='failed'" decoration-info="connection_status=='not_tested'">
                <field name="name"/>
                <field name="api_endpoint"/>
                <field name="connection_status"/>
                <field name="last_connection"/>
                <field name="tender_count"/>
                <field name="bid_count"/>
                <field name="active"/>
            </tree>
        </field>
    </record>
    
    <record id="gem_portal_action" model="ir.actions.act_window">
        <field name="name">GeM Portals</field>
        <field name="res_model">gem.portal</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Setup your first GeM Portal integration
            </p>
            <p>
                Configure Government e-Marketplace (GeM) portal integration.
            </p>
        </field>
    </record>
    
    <!-- GeM Bid Views -->
    <record id="gem_bid_view_form" model="ir.ui.view">
        <field name="name">gem.bid.form</field>
        <field name="model">gem.bid</field>
        <field name="arch" type="xml">
            <form string="GeM Bid">
                <header>
                    <button name="action_submit" string="Submit to GeM" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_check_status" string="Check Status" type="object" 
                            attrs="{'invisible': [('state', '=', 'draft')]}"/>
                            
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,submitted,under_evaluation,awarded"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Bid Reference"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="gem_portal_id"/>
                            <field name="tender_id"/>
                            <field name="bid_id"/>
                        </group>
                        <group>
                            <field name="bid_value"/>
                            <field name="currency_id" invisible="1"/>
                            <field name="technical_score"/>
                            <field name="submission_date"/>
                            <field name="award_date" attrs="{'invisible': [('state', '!=', 'awarded')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Documents" name="documents">
                            <field name="document_ids" context="{'default_tender_id': tender_id}">
                                <tree>
                                    <field name="name"/>
                                    <field name="document_type"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this bid..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="gem_bid_view_tree" model="ir.ui.view">
        <field name="name">gem.bid.tree</field>
        <field name="model">gem.bid</field>
        <field name="arch" type="xml">
            <tree string="GeM Bids" decoration-success="state=='awarded'" 
                  decoration-danger="state=='rejected'" decoration-info="state=='draft'">
                <field name="name"/>
                <field name="gem_portal_id"/>
                <field name="tender_id"/>
                <field name="bid_id"/>
                <field name="bid_value"/>
                <field name="technical_score"/>
                <field name="submission_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="gem_bid_view_search" model="ir.ui.view">
        <field name="name">gem.bid.search</field>
        <field name="model">gem.bid</field>
        <field name="arch" type="xml">
            <search string="Search GeM Bids">
                <field name="name"/>
                <field name="gem_portal_id"/>
                <field name="tender_id"/>
                <field name="bid_id"/>
                <separator/>
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Submitted" name="state_submitted" domain="[('state', '=', 'submitted')]"/>
                <filter string="Under Evaluation" name="state_evaluation" domain="[('state', '=', 'under_evaluation')]"/>
                <filter string="Awarded" name="state_awarded" domain="[('state', '=', 'awarded')]"/>
                <filter string="Rejected" name="state_rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Canceled" name="state_canceled" domain="[('state', '=', 'canceled')]"/>
                <group expand="0" string="Group By">
                    <filter string="GeM Portal" name="groupby_portal" context="{'group_by': 'gem_portal_id'}"/>
                    <filter string="Tender" name="groupby_tender" context="{'group_by': 'tender_id'}"/>
                    <filter string="Status" name="groupby_state" context="{'group_by': 'state'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="gem_bid_action" model="ir.actions.act_window">
        <field name="name">GeM Bids</field>
        <field name="res_model">gem.bid</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_tender': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first GeM bid
            </p>
            <p>
                Manage bids for Government e-Marketplace tenders.
            </p>
        </field>
    </record>
    
    <!-- OCR Processing Views -->
    <record id="tender_ocr_view_form" model="ir.ui.view">
        <field name="name">tender.ocr.form</field>
        <field name="model">tender.ocr</field>
        <field name="arch" type="xml">
            <form string="OCR Processing">
                <header>
                    <button name="action_process" string="Process" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_reset" string="Reset" type="object" 
                            attrs="{'invisible': [('state', 'not in', ['done', 'failed'])]}"/>
                            
                    <field name="state" widget="statusbar" 
                           statusbar_visible="draft,processing,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_document" icon="fa-file-text-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View Document</span>
                            </div>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_tender" icon="fa-file-o">
                            <div class="o_field_widget o_stat_info">
                                <span class="o_stat_text">View Tender</span>
                            </div>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="document_id"/>
                            <field name="tender_id"/>
                            <field name="processing_date"/>
                            <field name="completion_date"/>
                        </group>
                        <group>
                            <field name="confidence_score" widget="percentpie"/>
                            <field name="error_message" attrs="{'invisible': [('state', '!=', 'failed')]}"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="OCR Content" name="content">
                            <field name="content_html" widget="html" attrs="{'invisible': [('content', '=', False)]}"/>
                            <field name="content" invisible="1"/>
                        </page>
                        <page string="Extracted Data" name="extracted_data">
                            <group>
                                <group string="Key Information">
                                    <field name="submission_deadline"/>
                                    <field name="tender_value"/>
                                    <field name="tender_id_number"/>
                                    <field name="issuing_authority"/>
                                </group>
                                <group string="Raw Data">
                                    <field name="extracted_data"/>
                                    <field name="extracted_data_json" invisible="1"/>
                                </group>
                            </group>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Add notes about this OCR processing..."/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    
    <record id="tender_ocr_view_tree" model="ir.ui.view">
        <field name="name">tender.ocr.tree</field>
        <field name="model">tender.ocr</field>
        <field name="arch" type="xml">
            <tree string="OCR Processing" decoration-success="state=='done'" 
                  decoration-danger="state=='failed'" decoration-info="state=='processing'">
                <field name="name"/>
                <field name="document_id"/>
                <field name="tender_id"/>
                <field name="confidence_score" widget="percentage"/>
                <field name="processing_date"/>
                <field name="completion_date"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    
    <record id="tender_ocr_view_search" model="ir.ui.view">
        <field name="name">tender.ocr.search</field>
        <field name="model">tender.ocr</field>
        <field name="arch" type="xml">
            <search string="Search OCR">
                <field name="name"/>
                <field name="document_id"/>
                <field name="tender_id"/>
                <separator/>
                <filter string="Draft" name="state_draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Processing" name="state_processing" domain="[('state', '=', 'processing')]"/>
                <filter string="Completed" name="state_done" domain="[('state', '=', 'done')]"/>
                <filter string="Failed" name="state_failed" domain="[('state', '=', 'failed')]"/>
                <separator/>
                <filter string="High Confidence" name="high_confidence" domain="[('confidence_score', '>=', 80)]"/>
                <filter string="Medium Confidence" name="medium_confidence" domain="[('confidence_score', '>=', 50), ('confidence_score', '<', 80)]"/>
                <filter string="Low Confidence" name="low_confidence" domain="[('confidence_score', '<', 50)]"/>
                <group expand="0" string="Group By">
                    <filter string="Document" name="groupby_document" context="{'group_by': 'document_id'}"/>
                    <filter string="Tender" name="groupby_tender" context="{'group_by': 'tender_id'}"/>
                    <filter string="Status" name="groupby_state" context="{'group_by': 'state'}"/>
                    <filter string="Processing Date" name="groupby_processing_date" context="{'group_by': 'processing_date:day'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <record id="tender_ocr_action" model="ir.actions.act_window">
        <field name="name">OCR Processing</field>
        <field name="res_model">tender.ocr</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_groupby_tender': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No OCR processing yet
            </p>
            <p>
                Process tender documents with OCR to extract key information.
            </p>
        </field>
    </record>
